<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    tools:context="judou.ceicheng.com.computerprotect.LoginActivity">


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="登陆"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_linear"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        >

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="用户名"
          android:textColor="#000"
          android:textSize="15sp"
          android:id="@+id/et_username"
          android:padding="10dp"
          android:background="@null"
          />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EEE"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:textSize="15sp"
        android:textColor="#000"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@null"
        android:id="@+id/et_password"
        />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textSize="15sp"
        android:background="#555"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_linear"
        />

    <TextView
        android:id="@+id/tv_forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:textSize="12sp"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        />




    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgetpwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#EEE"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="其他账号登陆"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_weight="1"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#EEE"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_qq"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/qq"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_line" />


    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="QQ"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_qq"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/iv_weibo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/weibo"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_line" />


    <TextView
        android:id="@+id/tv_weibo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="微博"
        android:layout_marginRight="10dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_weibo" />


    <ImageView
        android:id="@+id/iv_weixin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/weixin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_line" />


    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#FFF"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_weixin"
        app:layout_constraintRight_toRightOf="parent"
        />



      <TextView
          android:text="易选·yixuan.yx"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="30dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_weibo"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="#FFF"
          android:textSize="15sp"
          />

</android.support.constraint.ConstraintLayout>
