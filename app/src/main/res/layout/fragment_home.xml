<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="judou.ceicheng.com.computerprotect.fragment.HomeFragment">

   <android.support.v7.widget.Toolbar
       android:id="@+id/toolbar_home"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#555"
       >

      <TextView
          android:id="@+id/tv_zuixin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="最新"
          android:gravity="center"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:paddingRight="7dp"
          android:paddingTop="10dp"
          android:background="@drawable/hometexttoptx"
          android:textColor="#FFF"
          android:layout_gravity="center"
          />
      <TextView
          android:id="@+id/tv_zuire"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="最热"
          android:gravity="center"
          android:background="@drawable/hometexttoptx2"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:paddingRight="7dp"
          android:paddingTop="10dp"
          android:textColor="#333"
          android:layout_gravity="center"
          />

       <ImageView
           android:id="@+id/iv_fabu"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/fabu"
           android:layout_gravity="right"
           android:layout_marginRight="10dp"
           />
   </android.support.v7.widget.Toolbar>

   <FrameLayout
       android:id="@+id/content_frag"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
   </FrameLayout>
   <!--<android.support.v7.widget.RecyclerView-->
       <!--android:id="@+id/rv_home"-->
       <!--android:layout_width="match_parent"-->
       <!--android:layout_height="match_parent">-->

   <!--</android.support.v7.widget.RecyclerView>-->

</LinearLayout>
