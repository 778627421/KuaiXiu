<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/c3" />

    <TextView
        android:id="@+id/tv_brand_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_pic_item"
        android:text="惠普"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shopname_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_pic_item"
        android:layout_alignRight="@+id/iv_pic_item"
        android:layout_below="@+id/iv_pic_item"
        android:gravity="center"
        android:text="星星店铺名"
        android:textColor="#ff0000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shopintro_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_shopname_item"
        android:layout_below="@+id/tv_shopname_item"
        android:maxEms="12"
        android:maxLines="2"
        android:text="商品介绍顶你顶你顶你你单独四年的女生都是大使命难道是速度是"
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_shopprice_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shopintro_item"
        android:text="120元"
        android:textColor="#cc4411" />


</RelativeLayout>